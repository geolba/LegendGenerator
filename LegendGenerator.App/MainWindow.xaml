                    <GradientStop Color="White" Offset="0" />
                    <GradientStop Color="#FFC4BDBD" Offset="1" />
                </LinearGradientBrush>
            </StatusBar.Background>
            <StatusBarItem x:Name="staLblMessage" Content="" x:FieldModifier="public" FontSize="12" Margin="5,0,0,0"  Foreground="Black"/>
