<Window x:Class="LegendGenerator.App.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"   
        Title="Legend Generator für ArcMap 10.3" 
        WindowStartupLocation="CenterScreen"
        Height="748" Width="740" Loaded="Window_Loaded"  
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="d" 
        xmlns:vm="clr-namespace:LegendGenerator.App.ViewModel"
        Icon="Skins/Images/gba.png" FontSize="12" Closing="Window_Closing">


    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/Backgrounds.xaml"/>
                <ResourceDictionary Source="Skins/Graphics.xaml"/>
                <ResourceDictionary Source="Skins/Theme.xaml"/>
                <ResourceDictionary Source="Skins/ConverterResourcen.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <vm:ViewModelLocator x:Key="Locator" d:IsDataSource="True" />
        </ResourceDictionary>
    </Window.Resources>
    <Window.Background>
        <StaticResource ResourceKey="WindowBackground"/>
    </Window.Background>


    <DockPanel x:Name="LayoutRoot" d:DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
        <Menu DockPanel.Dock="Top">
            <MenuItem x:Name="mnuFile" Header="{Binding LocalizedText.mnuFile, Mode=OneWay}" >
                <MenuItem x:Name="mnuAppSave" Header="{Binding LocalizedText.mnuAppSave, Mode=OneWay}"  Icon="{DynamicResource ResourceKey=imgSave}" Command="{Binding SaveProjectCommand}" Foreground="Black" FontWeight="Medium"  />
                <MenuItem x:Name="mnuAppSaveNew" Header="{Binding LocalizedText.mnuAppSaveNew, Mode=OneWay}"  Icon="{DynamicResource ResourceKey=imgSave}" Command="{Binding SaveAsProjectCommand}" Foreground="Black" FontWeight="Medium"/>
                <MenuItem x:Name="mnuAppLoad" Header="{Binding LocalizedText.mnuAppLoad, Mode=OneWay}"  Icon="{DynamicResource ResourceKey=imgLoad}" Command="{Binding LoadProjectCommand}" Foreground="Black" FontWeight="Medium" />
                <Separator />
                <MenuItem x:Name="mnuAppClose" Header="{Binding LocalizedText.mnuAppClose, Mode=OneWay}"  Icon="{DynamicResource ResourceKey=appClose}" Command="{Binding CloseCommand}" Foreground="Black" FontWeight="Medium" />
            </MenuItem>

            <MenuItem x:Name="mnuEinstellungen" Header="{Binding LocalizedText.mnuEinstellungen, Mode=OneWay}"  >
                <MenuItem x:Name="mnuSpracheinstellungen" Header="{Binding LocalizedText.mnuSpracheinstellungen, Mode=OneWay}"  Icon="{DynamicResource ResourceKey=imgEinstellungen}" Foreground="Black" FontWeight="Medium">
                    <CheckBox x:Name="chkSpracheDeutsch" Content="{Binding LocalizedText.chkSpracheDeutsch, Mode=OneWay}" IsChecked="{Binding ChkGerman, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <CheckBox x:Name="chkSpracheEnglisch" Content="{Binding LocalizedText.chkSpracheEnglisch, Mode=OneWay}" IsChecked="{Binding ChkEnglish, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </MenuItem>
                <MenuItem x:Name="mnuLoadStylefile" Header="{Binding LocalizedText.mnuLoadStylefile, Mode=OneWay}" Click="MnuLoadStylefile_Click" Icon="{DynamicResource ResourceKey=imgLoadStyleFile}" Foreground="Black" FontWeight="Medium"/>
            </MenuItem>

            <MenuItem x:Name="mnuExport" Header="Export" >
                <MenuItem x:Name="mnuGraphicExport" Header="{Binding LocalizedText.mnuGraphicExport, Mode=OneWay}" Icon="{DynamicResource ResourceKey=imgSymbolExport}" Foreground="Black" FontWeight="Medium"  Command="{Binding GraphicExportCommand}"/>
            </MenuItem>

            <MenuItem x:Name="mnuInfo" Header="{Binding LocalizedText.mnuInfo, Mode=OneWay}" >
                <MenuItem x:Name="mnuAppAbout"  Header="{Binding LocalizedText.mnuAppAbout, Mode=OneWay}" Click="MnuAppAbout_Click" Icon="{DynamicResource imgInfo}" Foreground="Black" FontWeight="Medium" />
            </MenuItem>

            <MenuItem x:Name="mnuHilfe" Header="{Binding LocalizedText.mnuHilfe, Mode=OneWay}" >
                <MenuItem x:Name="mnuAppHelp" Header="{Binding LocalizedText.mnuAppHelp, Mode=OneWay}" Icon="{DynamicResource ResourceKey=imgHilfe}" Click="MnuAppHelp_Click" Foreground="Black" FontWeight="Medium"/>
            </MenuItem>
        </Menu>

