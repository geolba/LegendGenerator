                <MenuItem Name="mnuAppClose" Header="{x:Static resx:Resource.mnuAppClose}"  Icon="{DynamicResource ResourceKey=appClose}" Click="MnuAppClose_Click" Foreground="Black" FontWeight="Medium" />
            </MenuItem>

            <MenuItem Name="mnuEinstellungen" Header="{x:Static resx:Resource.mnuEinstellungen}"  >
